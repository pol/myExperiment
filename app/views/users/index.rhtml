<div style="margin-bottom: 0.5em; font-size: 108%; font-weight: bold;">
	<p style="text-align: right;">
		<%= link_to "View All Users", "users/all" %>
	</p>
</div>

<div id="tabsContainer" class="tabsContainer"></div>

<% unless (recent = User.most_recent).empty? %>
  <div class="tabContainer">
  	<div class="tabTitle">Most Recent</div>
  	<div class="tabContent">
	    <%= render :partial => "users/hlist", :locals => { :collection => recent } %>
  	</div>
  </div>
<% end %>
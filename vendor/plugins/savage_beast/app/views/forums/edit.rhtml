<div class="crumbs">
  <%= link_to _('Forums'), forums_path %> <span class="arrow">&rarr;</span>
</div>

<h1><%= _('Edit Forum') %></h1>

<% form_for :forum,
     :url  => forum_path(@forum),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag _('Save Forum'), :or => link_to(_('Cancel'), forums_path) %>
<% end -%>
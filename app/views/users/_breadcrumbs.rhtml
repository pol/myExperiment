<li><%= link_to 'Users', users_path %></li>

<% if ["show", "new", "edit"].include? controller.action_name.to_s %>
  <li><b>&#187;</b></li>
  
  <% case controller.action_name.to_s; when "show" %>
    <li><%= link_to "View: #{h(@user.name)}", user_path(@user) %></li>
  <% when "new" %>
    <li><%= link_to "Create User", new_user_path %></li>
  <% when "edit" %>
    <li><%= link_to "Edit: #{h(@user.name)}", edit_user_path(@user) %>
  <% else %>
    <!-- no breadcrumb -->
  <% end %>
<% end %>

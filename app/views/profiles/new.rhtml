<h3>New profile for <%= openid(user_id) %></h3>

<%= error_messages_for :profile %>

<% form_for(:profile, :url => profiles_path) do |f| %>
  <p>
    <b>Picture</b><br />
    <div id="hlist">
      <ul>
      <li>
        <center><%= null_avatar 100 %><br/><%= f.radio_button :picture_id, nil %></center>
      </li>
      <% @profile.owner.pictures.each do |p| %>
        <li>
          <center><%= image_tag url_for :controller => 'pictures', :action  => 'show', :id => p.id, :size => '100x100' %><br/><%= f.radio_button :picture_id, p.id %></center>
        </li>
      <% end %>
      </ul>
    </div>
    <div style="clear:both;" />
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Website</b><br />
    <%= f.text_field :website %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>
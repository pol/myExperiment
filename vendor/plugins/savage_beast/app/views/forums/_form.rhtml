<p style="float:right; margin-top:0">
</p>

<% if controller.action_name == "new" || (@forum.contribution && my_page?(@forum.contribution.contributor_id, @forum.contribution.contributor_type)) %>

<p id="forum_contributor"></p>

<%= render :partial => "contributions/contributor_form", :locals => { :user => current_user } %>

<p id="forum_policy"></p>
  
<%= render :partial => "policies/listform", :locals => { :contribution => @forum.contribution, :user => current_user } %>

<% end %>

<% if controller.action_name == "edit" && @forum.contribution.owner?(current_user) %>

<p id="forum_contributor"></p>

<%= render :partial => "contributions/contributor_form", :locals => { :user => current_user, :current => @forum.contribution.contributor } %>

<p id="forum_policy"></p>
  
<%= render :partial => "policies/listform", :locals => { :contribution => @forum.contribution, :user => current_user } %>

<% end %>

<h3>Details</h3>

<p id="forum_name">
<label><%= _('Title') %></label><br />
<%= form.text_field :name, :class => "primary" %></p>

</p>
<p id="forum_descripion">
<label><%= _('Description') %></label><br />
<%= form.text_area :description, :rows => 7 %></p>
<p>
  <b>User:</b><br/>
  <% if @download.user_id %>
    <%= contributor(@download.user_id, "User", true, true, "100x100") %>
  <% else %>
    <%=null_avatar '100x100' %><br/><%= "Anonymous" %>
  <% end %>
</p>

<p>
  <b>Contribution:</b>
  <%= render :partial => "contributions/list", :locals => { :collection => [@download.contribution] } %>
</p>

<p>
  <b>Created at:</b>
  <%=datetime @download.created_at %>
</p>

<%= link_to "Back", viewings_path(@download.contribution) %>
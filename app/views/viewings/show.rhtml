<h3>Details</h3>

<p>
  <b>User:</b><br/>
  <% if @viewing.user_id %>
    <%= contributor(@viewing.user_id, "User", true, true, "100x100") %>
  <% else %>
    <%= null_avatar '100x100' %><br/><%= "Anonymous" %>
  <% end %>
</p>

<p>
  <b>Contribution:</b>
  <%= render :partial => "contributions/list", :locals => { :collection => [@viewing.contribution] } %>
</p>

<p>
  <b>Created at:</b>
  <%=datetime @viewing.created_at %>
</p>

<%= link_to "Back", viewings_path(@viewing.contribution) %>

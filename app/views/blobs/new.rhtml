<h1>New blob</h1>

<%= error_messages_for :blob %>

<% form_tag ({:action => :create}, :multipart => true) do %>
  <p>
    <b>Contributor</b><br />
    <%= text_field :blob, :contributor_id %>
  </p>

  <p>
    <b>Contributor type</b><br />
    <%= text_field :blob, :contributor_type %>
  </p>

  <p>
    <b>Data</b><br />
    <%= file_field :blob, :data %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', blobs_path %>
<h1>New friendship</h1>

<%= error_messages_for :friendship %>

<% form_for(:friendship, :url => friendships_path) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Friend</b><br />
    <%= f.text_field :friend_id %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', friendships_path %>
xm.item do
  xm.title h(workflow.title)
  xm.description white_list(workflow.body_html)
  xm.version workflow.version
  xm.pubDate workflow.created_at.rfc822
  xm.guid [request.host_with_port, "workflow", workflow.id.to_s].join(":"), "isPermaLink" => "false"
  xm.author contributor(workflow.contribution.contributor_id, workflow.contribution.contributor_type, false)
  xm.link workflow_url(workflow)
end